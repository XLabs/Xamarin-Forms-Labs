<?xml version="1.0" encoding="utf-8" ?>
<toolkit:BaseView xmlns="http://xamarin.com/schemas/2014/forms"
				  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
				  xmlns:toolkit="clr-namespace:XLabs.Forms.Mvvm;assembly=XLabs.Forms"
				  x:Class="XLabs.Sample.Pages.Services.ScreenshotManagerPage"
				  Title="Screenshot manager" >
  <toolkit:BaseView.Content>
    <StackLayout Padding="20">
      <Label Text="Screen has been captured!" IsVisible="{Binding ShowConfirm}" />
      <Button Text="Capture screenshot" Command="{Binding Capture}" />
    </StackLayout>
  </toolkit:BaseView.Content>
</toolkit:BaseView>